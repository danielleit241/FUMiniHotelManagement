<Window x:Class="FUMiniHotelApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Detail" Height="450" Width="750"
        Background="Red" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <TextBlock Text="Create | Update Room"
                   FontSize="20" FontWeight="Bold" Foreground="Yellow"
                   Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- Main form area -->
        <Border Background="Yellow" CornerRadius="10"
                Margin="10,50,220,10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Labels and Inputs -->
                <TextBlock Grid.Row="0" Grid.Column="0" Margin="5"><Run Text=" "/><Run Language="vi-vn" Text="Room "/><Run Text="ID:"/></TextBlock>
                <TextBox Grid.Row="0" Grid.Column="1" Margin="5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Margin="5"><Run Language="vi-vn" Text="Customer "/><Run Text="Name:"/></TextBlock>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Warranty:" Grid.Row="2" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Sound Level:" Grid.Row="3" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="3" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Feature Function:" Grid.Row="4" Grid.Column="0" Margin="5"/>
                <RichTextBox Grid.Row="4" Grid.Column="1" Margin="5" Height="60"/>

                <TextBlock Text="Quantity:" Grid.Row="5" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="5" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Price ($):" Grid.Row="5" Grid.Column="2" Margin="5"/>
                <TextBox Grid.Row="5" Grid.Column="3" Margin="5"/>

                <TextBlock Text="Date Price:" Grid.Row="6" Grid.Column="0" Margin="5"/>
                <DatePicker Grid.Row="6" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Supplier ID:" Grid.Row="7" Grid.Column="0" Margin="5"/>
                <ComboBox Grid.Row="7" Grid.Column="1" Margin="5"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,70,30,0" VerticalAlignment="Top">
            <Button Content="Save Room " Width="120" Height="40" Background="Yellow" Click="Save_Click" Margin="0,0,0,10"/>
            <Button Content="Close" Width="120" Height="40" Background="Yellow" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
