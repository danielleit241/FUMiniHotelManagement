<Window x:Class="FUMiniHotelManagement.WPF.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelManagement.WPF"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="685" Width="1265">
    <Grid Loaded="Grid_Loaded">

        <Label Content="Manage Customers" HorizontalAlignment="Left" Height="80" Margin="31,20,0,0" VerticalAlignment="Top" Width="569" FontWeight="Heavy" FontSize="50" FontStyle="Italic" Foreground="Yellow"/>

        <Label x:Name="HelloMsgLabel" Content="Hello, Administrator" HorizontalAlignment="Left" Height="50" Margin="929,6,0,0" VerticalAlignment="Top" Width="315" FontSize="25" FontStyle="Italic" Style="{StaticResource YellowLabelStyle}" HorizontalContentAlignment="Right"/>

        <Rectangle HorizontalAlignment="Left" Height="95" Margin="39,140,0,0" Stroke="Black" VerticalAlignment="Top" Width="1171" Fill="#ffff00" RadiusX="10" RadiusY="10" />
        <Button x:Name="SearchButton" Content="Search Customer" HorizontalAlignment="Left" Height="50" Margin="75,162,0,0" VerticalAlignment="Top" Width="262" TabIndex="2" Style="{StaticResource RedButtonStyle}" Click="SearchButton_Click"/>
        <Label Content="Full Name" HorizontalAlignment="Left" Height="45" Margin="388,169,0,0" VerticalAlignment="Top" Width="152" Foreground="#ff4500"/>
        <TextBox x:Name="FullNameTextBox" HorizontalAlignment="Left" Height="45" Margin="495,167,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="303" TabIndex="0"/>
        <Label Content="Telephone" HorizontalAlignment="Left" Height="45" Margin="890,169,0,0" VerticalAlignment="Top" Width="108" Foreground="#ff4500"/>
        <TextBox x:Name="TelephoneQuantityTextBox" HorizontalAlignment="Left" Height="45" Margin="1003,165,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="185" TabIndex="1"/>

        <Button x:Name="CreateButton" Content="Create Customer" HorizontalAlignment="Left" Height="50" Margin="1003,294,0,0" VerticalAlignment="Top" Width="185" TabIndex="3" Click="CreateButton_Click"/>
        <Button x:Name="UpdateButton" Content="Update Customer" HorizontalAlignment="Left" Height="50" Margin="1003,367,0,0" VerticalAlignment="Top" Width="185
            " TabIndex="4" Click="UpdateButton_Click"/>
        <Button x:Name="DeleteButton" Content="Delete Customer" HorizontalAlignment="Left" Height="50" Margin="1003,444,0,0" VerticalAlignment="Top" Width="185
            " TabIndex="5" Click="DeleteButton_Click"/>
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Height="50" Margin="1003,540,0,0" VerticalAlignment="Top" Width="185" TabIndex="6" Click="QuitButton_Click"/>

        <DataGrid x:Name="CustomersDataGrid" HorizontalAlignment="Left" Height="310" Margin="40,289,0,0" VerticalAlignment="Top" Width="930" AutoGenerateColumns="False" TabIndex="7" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="40" Binding="{Binding CustomerId}" />
                <DataGridTextColumn Header="Full Name" Width="150" Binding="{Binding CustomerFullName}" />
                <DataGridTextColumn Header="Telephone" Width="70" Binding="{Binding Telephone}" />
                <DataGridTextColumn Header="Email Address" Width="100" Binding="{Binding EmailAddress}" />
                <DataGridTextColumn Header="Birthday" Width="200" Binding="{Binding CustomerBirthday}" />
                <DataGridTextColumn Header="Status" Width="70" Binding="{Binding CustomerStatus}" />
                <DataGridTextColumn Header="Password" Width="100" Binding="{Binding Password}" />

                <DataGridTextColumn Header="BookingReservationId" Width="100" Binding="{Binding BookingReservations}" />
                <!--<DataGridTextColumn Header="Date Price" Width="100" Binding="{Binding DatePrice}" />
<DataGridTextColumn Header="Supplier ID" Width="70" Binding="{Binding SupplierId}" />
<DataGridTextColumn Header="Supplier Name" Width="140" Binding="{Binding Supplier.SupplierName}" />-->
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
