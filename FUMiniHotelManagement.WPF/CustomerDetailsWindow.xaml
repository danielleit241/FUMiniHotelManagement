<Window x:Class="FUMiniHotelManagement.WPF.CustomerDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Detail" Height="450" Width="666"
        Background="#fff" WindowStartupLocation="CenterScreen">

    <Grid Margin="10,10,0,0" Loaded="Grid_Loaded" Height="414" VerticalAlignment="Top" HorizontalAlignment="Left" Width="730">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="156*"/>
            <ColumnDefinition Width="368*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="CustomerDetailWindowLabel" Text="Create | Update Customer"
                   FontSize="20" FontWeight="Bold" Foreground="Yellow"
                   Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="4" Height="27" Width="242"/>

        <!-- Main form area -->
        <Border Background="Yellow" CornerRadius="10"
                Margin="10,50,187,0" Padding="10" Grid.ColumnSpan="5" Height="340" VerticalAlignment="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.935"/>
                    <ColumnDefinition Width="118.595"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Labels and Inputs -->
                <TextBlock Grid.Row="0" Grid.Column="1" Margin="3,5,5,5"><Run Language="vi-vn" Text="Customer"/><Run Text=" ID:"/></TextBlock>
                <TextBox x:Name="CustomerID" Grid.Row="0" Grid.Column="2" Margin="5,5,5,5"/>

                <TextBlock Grid.Row="1" Grid.Column="1" Margin="3,5,5,5"><Run Text="Customer "/><Run Text="Full Name:"/></TextBlock>
                <TextBox x:Name="CustomerFullName" Grid.Row="1" Grid.Column="2" Margin="5,5,5,5" />

                <TextBlock  Text="Telephone:" Grid.Row="2" Grid.Column="1" Margin="3,5,5,5"/>
                <TextBox x:Name="Telephone" Grid.Row="2" Grid.Column="2" Margin="5,5,5,5"/>

                <TextBlock  Text="Email Address:" Grid.Row="3" Grid.Column="1" Margin="3,5,5,5"/>
                <TextBox x:Name="EmailAddress" Grid.Row="3" Grid.Column="2" Margin="5,5,5,5"/>

                <TextBlock Text="Date Of Birth:" Grid.Row="5" Grid.Column="1" Margin="3,5,5,5"/>
                <DatePicker x:Name="DateOfBirth" Grid.Row="5" Grid.Column="2" Margin="5,5,5,5"/>

                <TextBlock  Text="Password: " Grid.Row="6" Grid.Column="1" Margin="3,5,5,5"/>
                <TextBox x:Name="Password" Grid.Row="6" Grid.Column="2" Margin="5,5,5,5"/>
                <TextBlock  Text="Status: " Grid.Row="7" Grid.Column="1" Margin="3,5,5,5"/>
                <TextBox x:Name="CustomerStatus" Grid.Row="7" Grid.Column="2" Margin="5,5,5,5"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="214,50,0,0" VerticalAlignment="Top" Grid.Column="4" Height="90" Width="120">
            <Button x:Name="btnSaveCus" Content="Save Customer" FontSize="15" Width="120" Height="40" Background="Yellow" Margin="0,0,0,10" Click="btnSaveCus_Click"/>
            <Button x:Name="btnClose" Content="Close" FontSize="15" Width="120" Height="40" Background="Yellow" Click="btnClose_Click" />
        </StackPanel>
    </Grid>
</Window>
